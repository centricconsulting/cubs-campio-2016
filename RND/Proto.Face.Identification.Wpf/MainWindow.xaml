<Window x:Class="Proto.Face.Identification.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proto.Face.Identification.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="370" Width="525">
    <Grid x:Name="BackPanel">
        <Image x:Name="FacePhoto" Stretch="Uniform" Margin="0,0,0,55"/>
        <Button x:Name="LearnButton" Margin="20,0,20,30" Height="20"         
                VerticalAlignment="Bottom" Content="Learn..."                
                Click="LearnButton_Click"/>
        <Button x:Name="BrowseButton" Margin="20,0,20,5" Height="20"         
                VerticalAlignment="Bottom" Content="Browse..."                
                Click="BrowseButton_Click"/>
    </Grid>
</Window>
